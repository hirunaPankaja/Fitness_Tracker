<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background2"
    android:padding="16dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Step Indicator -->
        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="STEP 9 of 10"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="360dp"
            android:layout_height="4dp"
            android:background="@color/button_color" />
    </LinearLayout>

    <!-- Question -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="HOW MUCH DO YOU WALK DAILY?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black" />

    <!-- Options as Radio Buttons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <!-- Option 1 -->
        <RadioButton
            android:id="@+id/radioOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LESS THAN 1 HOUR"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Option 2 -->
        <RadioButton
            android:id="@+id/radioOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1â€“2 HOURS"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Option 3 -->
        <RadioButton
            android:id="@+id/radioOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MORE THAN 2 HOURS"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp" />
</LinearLayout>
