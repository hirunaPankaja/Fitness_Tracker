<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background2"
    android:padding="16dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Step Indicator -->
        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="STEP 5 of 10"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="4dp"
            android:background="@color/button_color" />
    </LinearLayout>

    <!-- Question -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CHOOSE YOUR REASONS FOR GAINING WEIGHT"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black" />

    <!-- RadioGroup for Options -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Marriage or Relationship Option -->
        <RadioButton
            android:id="@+id/radioMarriage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Marriage or a Relationship"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Busy Work or Family Life Option -->
        <RadioButton
            android:id="@+id/radioBusyWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Busy Work or Family Life"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Stress or Mental Health Option -->
        <RadioButton
            android:id="@+id/radioStress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Stress or Mental Health"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Health or Hormonal Issues Option -->
        <RadioButton
            android:id="@+id/radioHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Health or Hormonal Issues"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Lack of Motivation Option -->
        <RadioButton
            android:id="@+id/radioMotivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Lack of Motivation"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- None of the Above Option -->
        <RadioButton
            android:id="@+id/radioNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="None of the Above"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Spacer to push the button to the bottom -->
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#3B82F6"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-medium"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
