<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background2"
    android:padding="16dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Step Indicator -->
        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="STEP 8 of 10"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="320dp"
            android:layout_height="4dp"
            android:background="@color/button_color" />
    </LinearLayout>

    <!-- Question -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="WHAT IS YOUR FITNESS LEVEL?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black" />

    <!-- RadioGroup for Options -->
    <RadioGroup
        android:id="@+id/fitnessLevelRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Beginner Option -->
        <RadioButton
            android:id="@+id/radioBeginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="BEGINNER\nI'm new to fitness"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="14sp"
            android:gravity="start" />

        <!-- Intermediate Option -->
        <RadioButton
            android:id="@+id/radioIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="INTERMEDIATE\nI work out 2-3 times a week"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="14sp"
            android:gravity="start" />

        <!-- Advanced Option -->
        <RadioButton
            android:id="@+id/radioAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="ADVANCED\nI exercise regularly"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="14sp"
            android:gravity="start" />
    </RadioGroup>

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp" />
</LinearLayout>
