<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background2"
    android:padding="16dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Step Indicator -->
        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="STEP 6 of 10"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="240dp"
            android:layout_height="4dp"
            android:background="@color/button_color" />
    </LinearLayout>

    <!-- Question -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CHOOSE YOUR PREFERRED DIET PLAN"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black" />

    <!-- RadioGroup for Diet Plan Options -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Vegetarian Option -->
        <RadioButton
            android:id="@+id/radioVegetarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Vegetarian"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Vegan Option -->
        <RadioButton
            android:id="@+id/radioVegan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Vegan"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Keto Option -->
        <RadioButton
            android:id="@+id/radioKeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Keto"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <!-- Other Option -->
        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Other"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:background="#2E2D2D"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#3B82F6"
        android:fontFamily="sans-serif-medium"
        android:text="CONTINUE"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
