<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date Selector -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dateRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- LinearLayout Under RecyclerView -->
        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_square"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dateRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/light_background_square"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/steps"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/footSteps"
                        android:textColor="@color/yellow"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <!-- Green/Red Beep Dot -->
                    <View
                        android:id="@+id/stepsBeepDot"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/circle_red"
                        android:contentDescription="Steps Beep Dot" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_background_square"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/flame"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/calories_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="16sp"
                        android:gravity="center" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!-- Map Panel with GPS Signal Bar -->
        <LinearLayout
            android:id="@+id/mapPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/topPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="56dp">

            <!-- GPS Signal Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Signal: "
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Distance: 0.0 km"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <!-- GPS Signal Indicator -->
                <View
                    android:id="@+id/gpsSignalIndicator"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_red"
                    android:contentDescription="GPS Signal Indicator" />
            </LinearLayout>

            <!-- Map Fragment -->


            <fragment
                android:id="@+id/mapFragment"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>
        </LinearLayout>

        <!-- Switches for Location and Step Tracking -->
        <LinearLayout
            android:id="@+id/switchPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/mapPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Switch
                android:id="@+id/switchLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Location"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchSteps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Steps"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Remaining Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_square"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/switchPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/tasks" />

                <TextView
                    android:id="@+id/FoodSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Tasks"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/food_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="( Complete Tasks )"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>